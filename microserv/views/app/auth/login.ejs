                                        <% } %>
                                </ul>
                            </div>

                            <% } %>
                    </div>
                </div>

                <header class="section-header">
                    <h4>Login into your account</h4>
                </header>

            </div>

            <div class="container text-center" style="margin-top: 30px;">
                <div class="row">
                    <div class="col-md-12" style="margin: 0 auto; max-width: 500px;">
                        <form action="/login" method="POST" class="input-line">
                            <div class="form-group input-group">
                                <input type="text" class="form-control" value="<%= data.id %>" name="id" required placeholder="Enter Unique ID">
                            </div><br>
                            <div class="btn-group">
                                <button class="btn btn-success" type="submit">Login</a>
                            </div>
                        </form>
                    </div><br>
                </div>
            </div>
        </section>
